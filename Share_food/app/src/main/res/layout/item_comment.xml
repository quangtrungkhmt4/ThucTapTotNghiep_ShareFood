<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.example.share_food.views.CustomTextViewItalic
        android:layout_width="wrap_content"
        android:id="@+id/tvNameComment"
        android:text="Ngọc Ngố"
        android:padding="5dp"
        android:drawablePadding="3dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_lens"
        android:textColor="@color/colorPrimary"
        style="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content" />
    <com.example.share_food.views.CustomFontTextView
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:id="@+id/tvCommentContent"
        android:layout_marginLeft="10dp"
        android:text="alo tôi là Ngọc, tôi bị ngố, ahihi"
        style="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="#CCCBCB"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>