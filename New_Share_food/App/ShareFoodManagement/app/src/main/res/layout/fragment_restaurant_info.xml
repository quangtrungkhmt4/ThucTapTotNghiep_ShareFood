<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.RestaurantInfoFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager_res"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <ImageView
                    android:id="@+id/imgResInfo"
                    android:layout_gravity="bottom|center_horizontal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loading"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </FrameLayout>

            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:id="@+id/tvNameResInfo"
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                style="?android:attr/textAppearanceLarge"
                android:layout_height="wrap_content" />

            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:id="@+id/tvStatusResInfo"
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                style="?android:attr/textAppearanceMedium"
                android:layout_height="wrap_content" />

            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:id="@+id/tvOpenTimeResInfo"
                android:drawableLeft="@drawable/ic_open_time"
                android:layout_height="wrap_content" />
            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:id="@+id/tvAddressResInfo"
                android:drawableLeft="@drawable/ic_address"
                android:layout_height="wrap_content" />
            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:id="@+id/tvPhoneResInfo"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:layout_height="wrap_content" />
            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:id="@+id/tvWebsiteResInfo"
                android:drawableLeft="@drawable/ic_web"
                android:layout_height="wrap_content" />

            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:layout_width="wrap_content"
                android:text="@string/province_info"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_point"
                android:layout_height="wrap_content" />

            <com.example.sharefoodmanagement.view.CustomItalyTextView
                android:layout_width="wrap_content"
                android:text="@string/app_name"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:id="@+id/tvProvinceResInfo"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/btnEditRestaurant"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />





</FrameLayout>